# Hybrid Buyer Advisor - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# OpenAI API Configuration
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Settings
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ===========================================
# Local Embedding Model (Recommended for Local Setup)
# ===========================================
USE_LOCAL_EMBEDDINGS=true
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===========================================
# Vector Store Configuration
# ===========================================
# Options: "superlinked", "qdrant" or "pinecone"
# Superlinked is recommended for natural language queries
VECTOR_STORE_TYPE=superlinked
USE_SUPERLINKED=true

# Qdrant Settings (for Superlinked backend)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=                         # Full URL (optional, e.g., https://your-cluster.cloud.qdrant.io)
QDRANT_API_KEY=                     # API key for Qdrant Cloud (leave empty for local)
QDRANT_COLLECTION_NAME=realestate
QDRANT_PATH=./qdrant_data
QDRANT_USE_LOCAL_FILE=false         # Set to false when using Superlinked with Qdrant server

# Pinecone Settings (if using cloud vector store)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=realestate-index

# ===========================================
# Embedding Dimensions
# ===========================================
# 384 for all-MiniLM-L6-v2 (local)
# 1536 for OpenAI text-embedding-ada-002
EMBEDDING_DIMENSION=384

# ===========================================
# Search Settings
# ===========================================
SEARCH_TOP_K=5

# ===========================================
# Data Settings
# ===========================================
DATA_PATH=./data
DATASET_FILENAME=realtor-data.csv

# ===========================================
# Server Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

